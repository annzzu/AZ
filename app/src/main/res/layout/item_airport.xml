<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_shapes_light_all"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHeight_percent=".1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvRestrictionForm"
    app:layout_constraintVertical_bias=".1"
    app:layout_constraintWidth_percent=".80">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAirport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@color/green_n_d"
        android:contentDescription="@string/app_name"
        android:foregroundTint="@color/white"
        app:backgroundTint="@color/green_n_d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_plane"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAirport"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/comfortaa_regular"
        android:lines="3"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/source_text"
        android:textAlignment="center"
        android:textColor="@color/green_n_d"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAirport"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

